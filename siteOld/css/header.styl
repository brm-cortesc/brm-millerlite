// Estilos pisados del navbar

.navbar
	margin 0
	background-color ml-lblue
	border none
	padding 0
	border-radius: 0 !important;

.navbar-collapse
	padding 0

.navbar-toggle
	background-color transparent
	border none
	&:hover
	&:active
	&:focus
	&:visited
		border none !important
		background-color transparent !important
	.icon-bar
		background-color white !important
		height 3px
		margin-bottom 1px

.navbar-nav
	li
		a
			background-color transparent
			color white !important
			height 3.5em
			font-size 1em
			padding-left 1em
			padding-right 1em
			text-transform uppercase
			&:hover
				border-bottom solid 0.2em ml-red
	li.active
		a
			background-color transparent !important
			border-bottom solid 0.2em ml-red
			&:hover
				border-bottom solid 0.2em ml-red

.navbar-form
	.form-control
		border-top none
		border-left none
		border-right none
		border-bottom solid 1px white
		border-radius: 0 !important;
		background-color transparent
		box-shadow: none !important;
		font-size 1em
		font-family 'roboto-r' !important
		text-transform uppercase
		padding 0
		margin-bottom 5px
		color white !important
	button
		background-color transparent !important
		border none !important
		color white
		font-size 1.2em
		&:hover
		&:active
		&:focus
		&:visited
			outline none !important
			box-shadow: none !important;
			border none !important
			color white !important

// oocss

.nopad-l
	padding-left 0

// Media querys

@media (max-width: 767px)
	
	.navbar-collapse
		width 100%
		overflow-x hidden
		padding 10px 15px 0 15px
		border-top none !important
		background-color ml-lblue !important
		z-index 20
		position absolute
	
	.navbar-nav
		width 95%
		margin 0 auto
		li	
			a
				padding-left 0.5em
				padding-right 0.5em
				font-size 1em
	.navbar-form
		.form-control
		.form-group
			width 90%
			display inline-block
		button
			display inline-block
			width 8% !important

@media (min-width: 768px) and (max-width: 990px)

	.navbar-nav
		li
			a
				height 3em
				font-size 0.9em
				padding-left 0.5em
				padding-right 0.5em

@media (min-width: 991px) and (max-width: 1199px)

	.navbar-nav
		li
			a
				height 3.2em
				font-size 1em
				padding-left 0.6em
				padding-right 0.6em
	