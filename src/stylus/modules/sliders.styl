// slider

.carousel,
.item,
.active 
	height 100%
	background none


.carousel-inner
	height 100%
	background #dddddd
	
.carousel-control
	width 4%

.carousel-caption
	position absolute
	right 0rem
	top 0rem
	bottom 0rem
	left 0rem
	z-index 10
	padding 4% 15% 4% 4%
	padding-top 0
	padding-bottom 0
	color #fff
	text-shadow 0 1px 2px rgba(0,0,0,.6)
	background-color #01214d
	text-align left
	opacity .8
	color #fff
	

.slid-tit
	font-size 3rem
	line-height 2.9rem
	color #fff 

.slid-tit-2
	font-size 2.5rem
	line-height 2.2rem
	margin 8% 0 5% 0
	color #fff
	font-family akzidenzgrotesk !important

.slid-txt
	color #FFFFFF
	font-size 1.4rem
	line-height 1.9rem
	margin 7% 0 0 0