.dam-l-2
	height 9rem !important
	width 100%

.u
	
	&-box-moments
		padding 1rem
		
		&:hover
			
			.u-box-moments-content
				background-color rgba(Mldark, 0.2)
				
			.u-box-moments-img
				img
					transform scale(1.2)
			
		&:last-child
			margin-bottom 10rem
			
		
		&-content
			background-color rgba(Mldark, 0.6)
			box-shadow 0px 0px 15px 0px rgba(0, 0, 0, 0.2)
			overflow hidden
			padding 0
			transition all ease-in-out 0.3s
			

			
		&-img
			padding 0
			transition all ease-in-out 0.3s
			
			img
				transition all ease-in-out 0.3s		
			
			&:hover
				img
					transform scale(1.2)
					width 100%
			
		&-text
			padding 4rem
			
			h2
				font-size 3rem
				
			.btn-block
				display block
				margin-left 80%
				width 10rem

		
	&-color-white
		color #fff
		
	&-linea
		display inline-block
		margin 2rem auto
	
	&-no-border
		padding 0
		margin 0
		

	