.btn
	&:focus, &:active
		outline 0 !important
		outline none !important
	//Botones generales del site
	
	&-block
		border none
		overflow hidden
		position relative
		z-index 1
		transition all ease-in-out 0.3s
		
		&:before
			background-color Mllight
			bottom 0
			content ""
			display block
			height 100%
			left 0
			position absolute
			right 0
			top -100%
			transition all ease-in-out 0.1s
			width @height
			z-index -1
			

		&:active
			background-color Mldark
			color transparent
			
			&:before
				transform scaleY(0)

		&:hover
			color #fff
			text-shadow 0px 0px 5px rgba(0,0,0,0.45)
			
			&:before
				top 0